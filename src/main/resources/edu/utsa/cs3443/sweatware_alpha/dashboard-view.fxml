<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="956.0" prefWidth="440.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fitHeight="956.0" fitWidth="440.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/swear_0003_Hue_Saturation-1.png" />
            </image>
        </ImageView>

        <!-- Header -->
        <Text layoutX="140.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Dashboard">
            <font>
                <Font size="36.0" />
            </font>
        </Text>

        <!-- My Workouts Section -->
        <Text layoutX="40.0" layoutY="150.0" strokeType="OUTSIDE" strokeWidth="0.0" text="My Workouts">
            <font>
                <Font size="24.0" />
            </font>
        </Text>

        <!-- Workout List Area -->
        <ListView layoutX="40.0" layoutY="170.0" prefHeight="300.0" prefWidth="360.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" />

        <!-- Buttons Section -->
        <Button layoutX="40.0" layoutY="490.0" mnemonicParsing="false" prefWidth="160.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" text="Add Workout">
            <font>
                <Font size="14.0" />
            </font>
        </Button>

        <Button layoutX="240.0" layoutY="490.0" mnemonicParsing="false" prefWidth="160.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" text="View All">
            <font>
                <Font size="14.0" />
            </font>
        </Button>

        <!-- Stats Section -->
        <Text layoutX="40.0" layoutY="570.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Quick Stats">
            <font>
                <Font size="24.0" />
            </font>
        </Text>

        <VBox layoutX="40.0" layoutY="590.0" prefWidth="360.0" spacing="15.0" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-background-radius: 10; -fx-padding: 20;">
            <children>
                <Label style="-fx-font-size: 16px;" text="Total Workouts: 0" />
                <Label style="-fx-font-size: 16px;" text="This Week: 0" />
                <Label style="-fx-font-size: 16px;" text="This Month: 0" />
            </children>
        </VBox>

        <!-- Bottom Navigation -->
        <Button layoutX="31.0" layoutY="778.0" mnemonicParsing="false" prefWidth="160.0" style="-fx-background-radius: 15; -fx-border-radius: 15;" text="Profile">
            <font>
                <Font size="18.0" />
            </font>
        </Button>

        <Button layoutX="240.0" layoutY="778.0" mnemonicParsing="false" prefWidth="160.0" style="-fx-background-radius: 15; -fx-border-radius: 15;" text="Logout">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
