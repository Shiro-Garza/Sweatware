<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="956.0" prefWidth="440.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.utsa.cs3443.sweatware_alpha.controller.LoginController">
    <children>
        <ImageView fitHeight="956.0" fitWidth="440.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/swear_0003_Hue_Saturation-1.png" />
            </image>
        </ImageView>
        <Text layoutX="69.0" layoutY="264.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sweatware">
            <font>
                <Font size="64.0" />
            </font>
        </Text>
        <Label fx:id="errorLabel" alignment="CENTER" layoutX="90.0" layoutY="300.0" prefWidth="260.0" style="-fx-background-color: red; -fx-text-fill: white; -fx-padding: 5; -fx-background-radius: 5;" textAlignment="CENTER" visible="false" wrapText="true">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="145.0" layoutY="350.0" promptText="Username" style="-fx-background-radius: 5; -fx-border-radius: 5;" />
        <StackPane layoutX="145.0" layoutY="380.0">
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 5; -fx-border-radius: 5;" />
            <TextField fx:id="textField" promptText="Password" visible="false" />
        </StackPane>
        <CheckBox fx:id="showPasswordCheckBox" layoutX="274.0" layoutY="384.0" onAction="#togglePasswordVisibility" />
        <Button layoutX="159.0" layoutY="421.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="27.0" prefWidth="122.0" style="-fx-background-radius: 5; -fx-border-radius: 5;" text="Login" />
        <Button layoutX="136.0" layoutY="460.0" mnemonicParsing="false" onAction="#handleForgotPassword" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: black;" text="Forgot Username / Password" underline="true" />
        <Button layoutX="134.0" layoutY="587.0" mnemonicParsing="false" onAction="#handleCreateAccount" prefHeight="27.0" prefWidth="172.0" style="-fx-background-radius: 5; -fx-border-radius: 5;" text="Create Account" />
    </children>
</AnchorPane>
